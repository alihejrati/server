                console.log('------>', $(_this).css('color'));
                !flag ? $(_this).css('color', 'rgb(0, 255, 0)') : $(_this).css('color', '');
            }

            if (services[tool].server == 'http') {
                const route = services[tool].route;
                const json = {};
                json['_id'] = _id;
                $.post(route, json, res => {
                    console.log('---------->_id', _id, res);
                });
                console.log('hoooooooooooooo!!', _id, tool, route);
            }
        }
    }
</script>

<script>
    function objrev(obj) {
        const newObj = {};
        const keys = Object.keys(obj).reverse();
        for (const key of keys) {
            newObj[key] = obj[key];
        }
        return newObj;
    }
</script>

