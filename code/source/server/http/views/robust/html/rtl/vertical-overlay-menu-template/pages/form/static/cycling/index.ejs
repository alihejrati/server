    <script>
        $(document).on('keypress', function (e) {
            if (e.which == 13) {
                $('a#login').click();
            }
        });

        function exec() {
            let username = $('input#user-name').val();
            let password = $('input#user-password').val();
            let cap = $('input#cap').val();

            username = username.trim();
            password = password.trim();
            cap = cap.trim();
            cap = cap.length != 4 ? '' : cap;

            $('#wait').click();
            $.post('/service/authuntication/signout/username-password:/authuntication/signin/username-password', {
                username: username,
                password: password,
                captcha: cap
            }, (res) => {
                $.unblockUI();
                msg.success.code = '';
                msg.success.description = '';
                msg.error.code = '';
                msg.error.description = '';
                const response = res.service.authuntication.signin['username-password'] || {};
                if (response.code == 200 || response.code == 208) {
                    $('button#type-success').click();
                    $('button.confirm').click(() => {
                        window.location.replace("/");
                    });
                } else {
                    switch (response.code) {
                        case 406:
                            msg.error.description = 'اطلاعات وارد شده صحیح نمی باشد';
                            break;
                        case 422:
                            msg.error.description = 'گذرواژه امنیتی نامعتبر میباشد';
                            break;

                        default:
                            msg.error.description = 'خطایی رخ داده';;
                    }
                    msg.error.head = response.code.toString();

                    $('button#type-error').click();
                }
            });
        }
    </script>
